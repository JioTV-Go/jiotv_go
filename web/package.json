{
  "devDependencies": {
    "daisyui": "^4.12.24",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "jsdom": "^24.0.0",
    "tailwindcss": "^3.4.17"
  },
  "scripts": {
    "build": "tailwindcss build -i ./static/input.css -o ./static/tailwind.css -m",
    "watch": "tailwindcss -i ./static/input.css -o ./static/tailwind.css -w",
    "test": "jest --testPathPattern='static/.*\\.test\\.js$'"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "collectCoverageFrom": [
      "static/**/*.js",
      "!static/**/*.test.js",
      "!static/**/*.min.js"
    ]
  }
}
